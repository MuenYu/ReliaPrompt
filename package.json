{
    "name": "llm-prompt-testing-tool",
    "version": "1.0.0",
    "description": "Tool for testing agentic server-side prompts against multiple LLMs",
    "main": "dist/server.js",
    "scripts": {
        "build": "bun run tsc",
        "start": "bun dist/server.js",
        "dev": "bun --watch src/server.ts",
        "format": "bun run prettier --write \"src/**/*.ts\" \"public/**/*.{html,js,css}\" \"*.json\" \"drizzle.config.ts\"",
        "db:generate": "bun run drizzle-kit generate",
        "db:studio": "bun run drizzle-kit studio"
    },
    "dependencies": {
        "@aws-sdk/client-bedrock-runtime": "^3.470.0",
        "cors": "^2.8.5",
        "drizzle-orm": "^0.44.7",
        "express": "^4.18.2",
        "openai": "^4.20.1"
    },
    "devDependencies": {
        "@types/bun": "^1.3.3",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.4",
        "drizzle-kit": "^0.31.7",
        "prettier": "^3.6.2",
        "typescript": "^5.3.3"
    }
}
